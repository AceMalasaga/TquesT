<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="10dp" />
            <solid android:color="@color/lightBlue" /> <!-- Set the inner circle color to violet when checked -->
            <stroke android:color="@android:color/black" android:width="2dp" /> <!-- Border color is black (#000000) when checked -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="10dp" />
            <solid android:color="#FFFFFF" /> <!-- Set the inner circle color to white when unchecked -->
            <stroke android:color="@android:color/black" android:width="2dp" /> <!-- Border color is black (#000000) when unchecked -->
        </shape>
    </item>
</selector>
